<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Zenvy Shop</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>

    <%- include('partials/header') %>
   <% if(success.length>0){ %>
        <div class="absolute mt-4 top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500">
            <span class="text-white mt-1 mb-1 inline-block">
                <%= success[0] %>
            </span>
        </div>
    <% }%>
      <% if(error.length>0){ %>
    <div class="absolute mt-4 top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
        <span class="text-white mt-1 mb-1 inline-block">
            <%= error[0] %>
        </span>
    </div>
  <% }%>

 
  <div class="flex flex-col  md:flex-row p-6">
    <aside class="w-full md:w-1/4 p-4 bg-white rounded-lg mb-6 md:mb-0 md:mr-6">
    
      <form class="mb-8">
        <label class="block text-gray-700 font-semibold mb-2">Sort by:</label>
        <select name="sort" id="sort" onclick="sortProducts" onchange="this.form.submit()"   class="border border-gray-300 rounded w-full p-2">
           <option value="">Sort</option>
          <option value="price">Price: Low to High</option>
          <option value="-price">Price: High to Low</option>
          <option value="name">Name: A → Z</option>
          <option value="-name">Name: Z → A</option>
        </select>
      </form>

      <div class="mb-8">
        <h2 class="font-semibold text-lg mb-3">Collections</h2>
        <ul class="space-y-2 text-gray-600">
          <li><a href="/shop">All Products</a></li>
          <li><a href="/discounted">Discounted Products</a></li>
        </ul>
      </div>

      <div>
        <h2 class="font-semibold text-lg mb-3">Filter</h2>
        <ul class="space-y-2 text-gray-600">
          <li><a href="/discounted">Discount</a></li>
        </ul>
      </div>
    </aside>

    <main class="flex-1">
      <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
       <% if(products.length === 0){ %>
          <h1 class="text-2xl font-semibold">No Products Available</h1>
        <% } %>
        <% products.forEach(product => { %>
         <li>
           <div class="bg-[<%= product.bgColor %>] rounded-xl shadow hover:shadow-lg transition duration-300">
             <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" class="h-52  w-full object-cover  rounded-t-xl " />
             <div class="bg-[<%= product.panelColor %>] flex justify-between items-center px-4 py-3 rounded-b-xl">
               <div class="text-[<%= product.textColor %>]">
                 <h1 class="font-semibold"><%= product.name %></h1>
                 <h2 class="text-sm line-through text-gray-500">₹<%= product.price %></h2>
                 <h2 class="text-sm">₹<%= product.price-product.discount %></h2>
               </div>
               <div class="flex gap-2">
                <button class="text-red-500 hover:text-red-700 flex items-center gap-1"><a href="/wishlist/<%= product._id %>"><i data-lucide="heart" class="text-white cursor-pointer" type="button"></i></a></button>
               <button class="bg-white text-black text-2xl rounded-full w-10 h-10 flex items-center justify-center shadow">
                 <a href="/addtocart/<%= product._id %>">+</a>
               </button>
               </div> 
             </div>
           </div>
         </li>
      <%  }) %>
       
             </ul>
           </main>
         </div>
         <script>
         lucide.createIcons();
         </script>
</body>
</html>



