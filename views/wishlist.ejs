<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Zenvy Shop</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="bg-gray-50 text-gray-800">

  
  <%- include('partials/header') %>
  <% if(error.length>0){ %>
    <div class="absolute mt-4 top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
        <span class="text-white mt-1 mb-1 inline-block">
            <%= error[0] %>
        </span>
    </div>
  <% }%>
  <% if (user.wishlist.length === 0) { %>
      <h1 class="text-2xl text-zinc-500 font-semibold mt-10 ml-10">Your wishlist is empty</h1>
    <% } %>
    <div class="flex flex-wrap gap-5 p-10">
    <% user.wishlist.map((product)=>{%>
        <div class="bg-[<%= product.bgColor %>] rounded-xl shadow hover:shadow-lg transition duration-300 w-68 h-full">
             <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" class="h-52  w-full object-cover  rounded-t-xl " />
             <div class="bg-[<%= product.panelColor %>] flex justify-between items-center px-4 py-3 rounded-b-xl">
               <div class="text-[<%= product.textColor %>]">
                 <h1 class="font-semibold"><%= product.name %></h1>
                 <h2 class="text-sm line-through text-gray-500">₹<%= product.price %></h2>
                 <h2 class="text-sm">₹<%= product.price-product.discount %></h2>
               </div>
               <div class="flex gap-2 ml-2">
                <button class="text-red-500 hover:text-red-700 flex items-center gap-1"><a href="/remove/<%= product._id %>"><i data-lucide="trash-2" class="text-zinc-100 w-5 h-5" type="button"></i></a></button>
               <button class="bg-white text-black text-2xl rounded-full w-10 h-10 flex items-center justify-center shadow">
                 <a href="/addtocart/<%= product._id %>">+</a>
               </button>
               </div> 
             </div>
           </div>
        <% }) %>
        </div>
        <script>
        lucide.createIcons();
        </script>
</body>
</html>
