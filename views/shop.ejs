<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Zenvy Shop</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>

  <div class="flex justify-between items-center p-4  ">
    <%- include('partials/header') %>
    <%- include('partials/logout') %>
  </div>

 
  <div class="flex flex-col  md:flex-row p-6">
    <aside class="w-full md:w-1/4 p-4 bg-white rounded-lg  mb-6 md:mb-0 md:mr-6">
    
      <div class="mb-8">
        <label class="block text-gray-700 font-semibold mb-2">Sort by:</label>
        <select name="sort" class="border border-gray-300 rounded w-full p-2">
          <option value="popular">Popular</option>
          <option value="price_asc">Price: Low to High</option>
          <option value="price_desc">Price: High to Low</option>
        </select>
      </div>

      <div class="mb-8">
        <h2 class="font-semibold text-lg mb-3">Collections</h2>
        <ul class="space-y-2 text-gray-600">
          <li><a href="#">New Collection</a></li>
          <li><a href="#">All Products</a></li>
          <li><a href="#">Discounted Products</a></li>
        </ul>
      </div>

      <div>
        <h2 class="font-semibold text-lg mb-3">Filter</h2>
        <ul class="space-y-2 text-gray-600">
          <li><a href="#">Availability</a></li>
          <li><a href="#">Discount</a></li>
        </ul>
      </div>
    </aside>

    <main class="flex-1">
      <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% for(let i=0; i<8; i++){ %> 
          <li>
            <div class="bg-white rounded-xl shadow hover:shadow-lg transition duration-300">
              <img src="/images/image.png" class="h-48 w-full object-cover rounded-t-xl" />
              <div class="bg-yellow-200 flex justify-between items-center px-4 py-3 rounded-b-xl">
                <div>
                  <h1 class="font-semibold text-gray-800">Product name</h1>
                  <h2 class="text-gray-600 text-sm">â‚¹Product price</h2>
                </div>
                <button class="bg-white text-black text-2xl rounded-full w-10 h-10 flex items-center justify-center shadow">
                  +
                </button>
              </div>
            </div>
          </li>
        <% } %>
      </ul>
    </main>
  </div>
</body>
</html>
